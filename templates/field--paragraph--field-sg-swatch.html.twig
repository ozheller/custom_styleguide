{% if label_hidden %}
  {% if multiple %}
    <ul class="list-swatches list-inline list-unstyled col-sm-12">
      {% for item in items %}
      {{ item.content }}
      {% endfor %}
    </ul>
  {% else %}
    {% for item in items %}
      <ul class="list-swatches list-inline list-unstyled col-sm-12">{{ item.content }}</ul>
    {% endfor %}
  {% endif %}
{% else %}
  <ul class="list-swatches list-inline list-unstyled col-sm-12">
    <h4 class="sg-label">{{ label }}</h4>
    {% if multiple %}

    {% endif %}
    {% for item in items %}
    {{ item.content }}
    {% endfor %}
    {% if multiple %}

    {% endif %}
  </ul>
{% endif %}
