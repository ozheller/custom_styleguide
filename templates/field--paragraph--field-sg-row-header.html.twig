
{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes }}>
      {% for item in items %}
        <h3{{ item.attributes }}>{{ item.content }}</h3>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <h3{{ attributes }}>{{ item.content }}</h3>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes }}>
    <div{{ title_attributes }}>{{ label }}</div>
    {% if multiple %}
      <div>
    {% endif %}
    {% for item in items %}
      <h3{{ item.attributes }}>{{ item.content }}</h3>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
